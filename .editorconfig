# EditorConfig - https://editorconfig.org
# Use with your editor's EditorConfig plugin for consistent styling across the team.

root = true

# Defaults for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Go (gofmt uses tabs)
[*.go]
indent_style = tab
indent_size = 4
tab_width = 4

# Markdown (2 spaces for list nesting; trailing whitespace meaningful in line breaks)
[*.md]
indent_style = space
indent_size = 2
tab_width = 2
trim_trailing_whitespace = false

# YAML (GitHub Actions, configs)
[*.{yml,yaml}]
indent_style = space
indent_size = 2
tab_width = 2

# JSON
[*.json]
indent_style = space
indent_size = 2
tab_width = 2

# Makefile (requires literal tabs)
[Makefile]
indent_style = tab
indent_size = 4
tab_width = 4

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
tab_width = 2

# TOML (go.mod uses this format; configs)
[*.toml]
indent_style = space
indent_size = 2
tab_width = 2
